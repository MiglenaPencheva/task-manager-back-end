<section>

    {{#if formattedTasks}}

        {{#if isOne}}
            <h3>1 задача</h3>
        {{else}}
            <h3>{{formattedTasks.length}} задачи</h3>
        {{/if}}

    <div>
        {{#each formattedTasks}}
        {{> task}}
        {{/each}}
    </div>

    {{else}}
        <h3>Няма задачи...</h3>
    {{/if}}

</section>