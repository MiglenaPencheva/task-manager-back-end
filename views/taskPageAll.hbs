<section>

    {{#if formatedTasks}}

        {{#if isOne}}
            <h3>1 задача</h3>
        {{else}}
            <h3>{{formatedTasks.length}} задачи</h3>
        {{/if}}

    <div>
        {{#each formatedTasks}}
        {{> task}}
        {{/each}}
    </div>

    {{else}}
        <h3>Няма задачи...</h3>
    {{/if}}

</section>