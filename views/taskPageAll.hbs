<main>

    <h1 class="text-center">Всички задачи</h1>

    {{#if tasks}}

    <h4 class="text-center">{{tasks.length}} задачи</h4>

    {{> search}}

    <div class="container mt-3">
        <div class="row ">
            <div class="card-deck d-flex justify-content-center">

                {{#each tasks}}
                {{> task}}
                {{/each}}

            </div>
        </div>
    </div>

    {{else}}
    <h3 class="text-center">Няма задачи...</h3>
    {{/if}}

</main>