<main>

    {{#if formatedMyTasks}}

        {{#if isOne}}
            <h3 class="text-center">1 моя задача</h3>
        {{else}}
            <h3 class="text-center">{{formatedMyTasks.length}} мои задачи</h3>   
        {{/if}}


    <div class="cards">

        {{#each formatedMyTasks}}
            {{> task}}
        {{/each}}

    </div>


    {{else}}
        <h3>Няма мои задачи...</h3>
    {{/if}}

</main>