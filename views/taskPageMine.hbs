<section>

    {{#if formattedMyTasks}}

        {{#if isOne}}
            <h3>1 моя задача</h3>
        {{else}}
            <h3>{{formattedMyTasks.length}} мои задачи</h3>   
        {{/if}}


    <div>
        {{#each formattedMyTasks}}
            {{> task}}
        {{/each}}
    </div>


    {{else}}
        <h3>Няма мои задачи...</h3>
    {{/if}}

</section>