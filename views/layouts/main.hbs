<body>
    <div class="container">

        {{#if user}}

        <header>
            {{!-- <a class="home" href="/tasks/to-do"><i class='fas fa-home' style='font-size:24px'></i></a> --}}

            <button class="menu" onclick="showMenu()">
                <i class="fas fa-bars"></i>
                <div class="dropdown-content">
                    <h4>Здравей, {{user.username}}!</h4>
                    <hr>
                    <a href="/tasks/create">Създай нова задача</a>
                    <hr>
                    <a href="/tasks/to-do">Задачи за изпълнение</a>
                    <a href="/tasks/all">Всички задачи</a>
                    <a href="/tasks/archive">Завършени задачи</a>
                    <a href="/tasks/my-tasks">Моите задачи</a>
                    <hr>
                    <a href="/auth/logout">Изход от профила</a>
                </div>
            </button>

            <h1>Офис помощник</h1>

            <button class="menu" onclick="showSearch()">
                <i class="fas fa-search"></i>
            </button>

            <a class="menu" href="/tasks/create">
                <i class="fas fa-plus"></i>
            </a>

        </header>

        {{else}}

        {{guestPage}}

        {{/if}}

        <main>

            {{>search}}

            {{#if error}}
                <p class="error">{{error.message}}</p>
            {{/if}}

            {{{body}}}

        </main>

        <footer>© 2021 Mgl</footer>

    </div>

