<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-primary">
            <a class="navbar-brand" href="/to-do">Задачи за изпълнение</a>
            <a class="navbar-brand" href="/archive">Завършени задачи</a>
            <a class="navbar-brand" href="/">Всички задачи</a>
            <a class="navbar-brand" href="/my-tasks">Моите задачи</a>

            <a href="/create" class="btn btn-warning ">Създай нова задача</a>

            <ul class="navbar-nav ml-auto">

                {{#if user}}

                <li class="nav-item"><a class="nav-link" href="/">Здравей, {{user.username}}</a></li>
                <li class="nav-item"><a class="nav-link" href="/auth/logout">Изход от профила</a></li>

                {{else}}

                <li class="nav-item"><a class="nav-link" href="/auth/login">Влез в профила си</a></li>
                <li class="nav-item"><a class="nav-link" href="/auth/register">Регистрирай се</a></li>

                {{/if}}

            </ul>
        </nav>

        <main>
            {{#if error}}
            <section class="notifications">
                <p class="notification-message">{{error.message}}</p>

            </section>
            {{/if}}

            {{{body}}}

        </main>

        <footer class="page-footer font-small">
            <div class="footer-copyright text-center py-3">© 2021 Mgl</div>
        </footer>

    </div>
