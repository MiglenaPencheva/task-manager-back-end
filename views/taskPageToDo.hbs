<main>

    {{!-- <h1>Задачи за изпълнение</h1> --}}
    
    {{#if toDoList}}

    <h4>{{toDoList.length}} задачи за изпълнение</h4>

    {{!-- {{> search}} --}}

    <div class="container mt-3">
        <div class="row ">
            <div class="card-deck d-flex justify-content-center">

                {{#each toDoList}}
                    {{> task}}
                {{/each}}

            </div>
        </div>
    </div>

    {{else}}
        <h3 class="text-center">Няма задачи за изпълнение...</h3>
    {{/if}}

</main>