<main>

    {{#if formatedToDoList}}

        {{#if isOne}}
            <h3 class="text-center">1 задача за изпълнение</h3>
        {{else}}
            <h3>{{formatedToDoList.length}} задачи за изпълнение</h3>
        {{/if}}


    <div class="cards">
        {{#each formatedToDoList}}
        {{> task}}
        {{/each}}
    </div>

    {{else}}
        <h3>Няма задачи за изпълнение...</h3>
    {{/if}}

</main>