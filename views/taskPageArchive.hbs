<section>

    {{#if formattedCompleted}}

        {{#if isOne}}
            <h3>1 завършена задача</h3>
        {{else}}
            <h3>{{formattedCompleted.length}} завършени задачи</h3>
        {{/if}}


    <div>
        {{#each formattedCompleted}}
            {{> task}}
        {{/each}}
    </div>

    {{else}}
        <h3>Няма завършени задачи...</h3>
    {{/if}}

</section>